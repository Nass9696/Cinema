{% extends 'layout.html.twig' %}


{% block title %}{{ movie.title }}{% endblock %}
{% block main %}
  {% block aside %}
  <div class="container-fluid d-flex align-items-center flex-row justify-content-center">
    <div class="card mt-5" style="width: 18rem;">
      <img class="card-img-top" style="height: 250px; width: 100%; display: block;" src="https://lorempixel.com/540/370/" alt="">
      <div class="card-body">
        <h5 class="card-title">{{ movie.title }}</h5>
        <p class="card-text">Genre : {{ movie.type }}</p>
          <p class="card-text">Note :
               {{ movie.getAverage() }}
          </p>
      </div>
    </div>
    <div class="container">
      <p> {{ movie.sumary }} </p>
    </div>
  </div>
  {% endblock %}
{% endblock %}
